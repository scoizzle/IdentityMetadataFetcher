@using System.Collections.Generic
@using MvcDemo.Models

@model List<IssuerDetailViewModel>

@{
    ViewBag.Title = "Identity Providers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="issuers-hero bg-gradient-success text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-building me-3"></i>
                    Identity Providers
                </h1>
                <p class="lead mb-4">
                    Manage SAML identity providers and monitor metadata synchronization across your enterprise.
                    @if (Model != null && Model.Count > 0)
                    {
                        <span class="badge bg-light text-success fs-6 px-3 py-2 ms-2">@Model.Count Active Provider@(Model.Count == 1 ? "" : "s")</span>
                    }
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-light text-primary fs-6 px-3 py-2">
                        <i class="fas fa-sync me-1"></i>Metadata Polling
                    </span>
                    <span class="badge bg-light text-primary fs-6 px-3 py-2">
                        <i class="fas fa-shield-alt me-1"></i>Certificate Validation
                    </span>
                    <span class="badge bg-light text-primary fs-6 px-3 py-2">
                        <i class="fas fa-clock me-1"></i>Real-time Monitoring
                    </span>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-icon">
                    <i class="fas fa-users-cog fa-6x text-white opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-xl-12">
            <!-- Action Bar -->
            <div class="card shadow-lg border-0 rounded-3 overflow-hidden mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div>
                            <h4 class="mb-1">Provider Management</h4>
                            <p class="text-muted mb-0">Configure and monitor SAML identity providers</p>
                        </div>
                        <div class="d-flex gap-2">
                            @Html.ActionLink("Add New Provider", "Create", "Issuers", null, new { @class = "btn btn-success btn-lg px-4" })
                            <a href="@Url.Action("Index", "LogViewer")" class="btn btn-outline-primary btn-lg px-4">
                                <i class="fas fa-list me-2"></i>View Logs
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alerts -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @Html.Raw(TempData["SuccessMessage"].ToString().Replace("\n", "<br/>"))
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Info Alert -->
            <div class="alert alert-info border-0 shadow-sm">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle fa-2x text-info me-3"></i>
                    </div>
                    <div>
                        <h6 class="alert-heading mb-2">Provider Management</h6>
                        <p class="mb-0">This view shows identity providers currently monitored by the metadata polling service. Changes take effect immediately and are reflected in real-time logs.</p>
                    </div>
                </div>
            </div>

            <!-- Providers List -->
            @if (Model == null || Model.Count == 0)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Identity Providers Configured</h4>
                        <p class="text-muted mb-4">Get started by adding your first SAML identity provider.</p>
                        @Html.ActionLink("Add First Provider", "Create", "Issuers", null, new { @class = "btn btn-primary btn-lg" })
                    </div>
                </div>
            }
            else
            {
                <!-- Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stat-card p-3 bg-primary bg-opacity-10 border border-primary rounded-3 text-center">
                            <div class="stat-number h2 text-primary mb-1">@Model.Count</div>
                            <div class="stat-label text-muted">Total Providers</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card p-3 bg-success bg-opacity-10 border border-success rounded-3 text-center">
                            <div class="stat-number h2 text-success mb-1">@Model.Count(m => m.HasMetadata)</div>
                            <div class="stat-label text-muted">With Metadata</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card p-3 bg-info bg-opacity-10 border border-info rounded-3 text-center">
                            <div class="stat-number h2 text-info mb-1">@Model.Sum(m => m.Endpoints.Count)</div>
                            <div class="stat-label text-muted">Total Endpoints</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card p-3 bg-warning bg-opacity-10 border border-warning rounded-3 text-center">
                            <div class="stat-number h2 text-warning mb-1">@(Model.Sum(m => m.SigningCertificates.Count) + Model.Sum(m => m.EncryptionCertificates.Count))</div>
                            <div class="stat-label text-muted">Total Certificates</div>
                        </div>
                    </div>
                </div>

                <!-- Provider Cards -->
                foreach (var issuer in Model)
                {
                    <div class="card provider-card shadow-sm border-0 rounded-3 overflow-hidden mb-4">
                        <div class="card-header bg-gradient-primary text-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="provider-icon me-3">
                                        <i class="fas fa-building fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold">@issuer.Name</h5>
                                        <small class="opacity-75">
                                            <i class="fas fa-id-badge me-1"></i>
                                            <code class="bg-white bg-opacity-25 px-2 py-1 rounded">@issuer.Id</code>
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    @Html.ActionLink("Edit", "Edit", "Issuers", new { id = issuer.Id }, new { @class = "btn btn-light btn-sm" })
                                    <form method="post" action="@Url.Action("Delete", "Issuers")" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", issuer.Id)
                                        <button type="submit" class="btn btn-outline-light btn-sm" onclick="return confirm('Are you sure you want to remove this provider from monitoring?');">
                                            <i class="fas fa-trash me-1"></i>Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="card-body p-4">
                            <!-- Basic Info -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="info-item p-3 bg-light rounded-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-globe text-primary me-2"></i>
                                            <h6 class="mb-0">Endpoint</h6>
                                        </div>
                                        <p class="mb-1">
                                            <a href="@issuer.Endpoint" target="_blank" class="text-decoration-none">
                                                <small class="text-break">@issuer.Endpoint</small>
                                            </a>
                                        </p>
                                        <span class="badge bg-info">@issuer.MetadataType</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item p-3 bg-light rounded-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-server text-primary me-2"></i>
                                            <h6 class="mb-0">Metadata Status</h6>
                                        </div>
                                        @if (issuer.HasMetadata)
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                <span class="badge bg-success">Available</span>
                                            </div>
                                            if (issuer.LastMetadataFetch.HasValue)
                                            {
                                                <small class="text-muted mt-1">
                                                    Last fetch: @(issuer.LastMetadataFetch.HasValue ? issuer.LastMetadataFetch.Value.ToString("yyyy-MM-dd HH:mm:ss") : "Unknown")
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-clock text-warning me-2"></i>
                                                <span class="badge bg-warning">Pending</span>
                                            </div>
                                            <small class="text-muted mt-1">@issuer.MetadataError</small>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (issuer.HasMetadata)
                            {
                                <!-- Detailed Info -->
                                <div class="row mb-4">
                                    @if (!string.IsNullOrEmpty(issuer.RoleType))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item p-3 bg-light rounded-3">
                                                <div class="d-flex align-items-center mb-2">
                                                    <i class="fas fa-user-tag text-primary me-2"></i>
                                                    <h6 class="mb-0">Role Type</h6>
                                                </div>
                                                <p class="mb-0">@issuer.RoleType</p>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(issuer.EntityId))
                                    {
                                        <div class="col-md-6">
                                            <div class="info-item p-3 bg-light rounded-3">
                                                <div class="d-flex align-items-center mb-2">
                                                    <i class="fas fa-fingerprint text-primary me-2"></i>
                                                    <h6 class="mb-0">Entity ID</h6>
                                                </div>
                                                <p class="mb-1">
                                                    <small class="text-break font-monospace">@issuer.EntityId</small>
                                                </p>
                                            </div>
                                        </div>
                                    }

                                    <!-- Organization Information -->
                                    @if (!string.IsNullOrEmpty(issuer.OrganizationName) || !string.IsNullOrEmpty(issuer.OrganizationDisplayName))
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-building text-primary me-2"></i>
                                                Organization Information
                                            </h6>
                                            <div class="row g-3">
                                                @if (!string.IsNullOrEmpty(issuer.OrganizationName))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="org-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-tag text-info me-2"></i>
                                                                <h6 class="mb-0">Organization Name</h6>
                                                            </div>
                                                            <p class="mb-0">@issuer.OrganizationName</p>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(issuer.OrganizationDisplayName))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="org-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-eye text-info me-2"></i>
                                                                <h6 class="mb-0">Display Name</h6>
                                                            </div>
                                                            <p class="mb-0">@issuer.OrganizationDisplayName</p>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(issuer.OrganizationUrl))
                                                {
                                                    <div class="col-md-12">
                                                        <div class="org-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-globe text-info me-2"></i>
                                                                <h6 class="mb-0">Organization URL</h6>
                                                            </div>
                                                            <p class="mb-0">
                                                                <a href="@issuer.OrganizationUrl" target="_blank" class="text-decoration-none">
                                                                    @issuer.OrganizationUrl
                                                                </a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Contact Information -->
                                    @if (!string.IsNullOrEmpty(issuer.TechnicalContactEmail) || !string.IsNullOrEmpty(issuer.SupportContactEmail))
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-address-book text-primary me-2"></i>
                                                Contact Information
                                            </h6>
                                            <div class="row g-3">
                                                @if (!string.IsNullOrEmpty(issuer.TechnicalContactEmail))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="contact-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-tools text-warning me-2"></i>
                                                                <h6 class="mb-0">Technical Contact</h6>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(issuer.TechnicalContactGivenName) || !string.IsNullOrEmpty(issuer.TechnicalContactSurname))
                                                            {
                                                                <p class="mb-1">@issuer.TechnicalContactGivenName @issuer.TechnicalContactSurname</p>
                                                            }
                                                            <p class="mb-0">
                                                                <a href="mailto:@issuer.TechnicalContactEmail" class="text-decoration-none">
                                                                    <i class="fas fa-envelope me-1"></i>@issuer.TechnicalContactEmail
                                                                </a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(issuer.SupportContactEmail))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="contact-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-life-ring text-success me-2"></i>
                                                                <h6 class="mb-0">Support Contact</h6>
                                                            </div>
                                                            <p class="mb-0">
                                                                <a href="mailto:@issuer.SupportContactEmail" class="text-decoration-none">
                                                                    <i class="fas fa-envelope me-1"></i>@issuer.SupportContactEmail
                                                                </a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Protocol & Security Settings -->
                                    @if (issuer.ProtocolsSupported.Any() || issuer.WantAuthnRequestsSigned.HasValue || issuer.AuthnRequestsSigned.HasValue || issuer.WantAssertionsSigned.HasValue)
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-shield-alt text-primary me-2"></i>
                                                Protocol & Security Settings
                                            </h6>
                                            <div class="row g-3">
                                                @if (issuer.ProtocolsSupported.Any())
                                                {
                                                    <div class="col-md-6">
                                                        <div class="security-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="fas fa-code text-info me-2"></i>
                                                                <h6 class="mb-0">Supported Protocols</h6>
                                                            </div>
                                                            <div>
                                                                @foreach (var protocol in issuer.ProtocolsSupported)
                                                                {
                                                                    <span class="badge bg-info me-1 mb-1">@protocol</span>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                <div class="col-md-6">
                                                    <div class="security-card p-3 border rounded-3">
                                                        <div class="d-flex align-items-center mb-2">
                                                            <i class="fas fa-key text-warning me-2"></i>
                                                            <h6 class="mb-0">Security Settings</h6>
                                                        </div>
                                                        <div class="small">
                                                            @if (issuer.WantAuthnRequestsSigned.HasValue)
                                                            {
                                                                <div class="mb-1">
                                                                    <i class="fas fa-@(issuer.WantAuthnRequestsSigned.Value ? "check" : "times") text-@(issuer.WantAuthnRequestsSigned.Value ? "success" : "danger") me-1"></i>
                                                                    Wants AuthnRequests Signed
                                                                </div>
                                                            }
                                                            @if (issuer.AuthnRequestsSigned.HasValue)
                                                            {
                                                                <div class="mb-1">
                                                                    <i class="fas fa-@(issuer.AuthnRequestsSigned.Value ? "check" : "times") text-@(issuer.AuthnRequestsSigned.Value ? "success" : "danger") me-1"></i>
                                                                    AuthnRequests Signed
                                                                </div>
                                                            }
                                                            @if (issuer.WantAssertionsSigned.HasValue)
                                                            {
                                                                <div class="mb-1">
                                                                    <i class="fas fa-@(issuer.WantAssertionsSigned.Value ? "check" : "times") text-@(issuer.WantAssertionsSigned.Value ? "success" : "danger") me-1"></i>
                                                                    Wants Assertions Signed
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <!-- NameID Formats -->
                                    @if (issuer.NameIdFormats.Any())
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-id-card text-primary me-2"></i>
                                                Supported NameID Formats (@issuer.NameIdFormats.Count)
                                            </h6>
                                            <div class="nameid-card p-3 border rounded-3">
                                                @foreach (var format in issuer.NameIdFormats)
                                                {
                                                    <div class="mb-2">
                                                        <code class="bg-light px-2 py-1 rounded">@format</code>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Single Logout Endpoints -->
                                    @if (issuer.SingleLogoutEndpoints.Any())
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-sign-out-alt text-primary me-2"></i>
                                                Single Logout Endpoints (@issuer.SingleLogoutEndpoints.Count)
                                            </h6>
                                            <div class="row g-3">
                                                @foreach (var slo in issuer.SingleLogoutEndpoints)
                                                {
                                                    <div class="col-md-6">
                                                        <div class="endpoint-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-start">
                                                                <i class="fas fa-sign-out-alt text-warning me-3 mt-1"></i>
                                                                <div class="flex-grow-1">
                                                                    <div class="badge bg-warning text-dark mb-2">SLO</div>
                                                                    <p class="mb-0">
                                                                        <a href="@slo.Location" target="_blank" class="text-decoration-none small text-break">
                                                                            @slo.Location
                                                                        </a>
                                                                    </p>
                                                                    @if (!string.IsNullOrEmpty(slo.Binding))
                                                                    {
                                                                        <small class="text-muted">Binding: @slo.Binding</small>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Encryption Certificates -->
                                    @if (issuer.EncryptionCertificates.Any())
                                    {
                                        <div class="mb-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-lock text-primary me-2"></i>
                                                Encryption Certificates (@issuer.EncryptionCertificates.Count)
                                            </h6>
                                            <div class="row g-3">
                                                @foreach (var cert in issuer.EncryptionCertificates)
                                                {
                                                    <div class="col-md-6">
                                                        <div class="certificate-card p-3 border rounded-3">
                                                            <div class="d-flex align-items-start">
                                                                <i class="fas fa-lock text-info me-3 mt-1"></i>
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mb-2">Encryption Certificate</h6>
                                                                    <div class="mb-2">
                                                                        <small class="text-muted">Subject:</small><br>
                                                                        <small class="font-monospace">@cert.Subject</small>
                                                                    </div>
                                                                    <div class="mb-2">
                                                                        <small class="text-muted">Thumbprint:</small><br>
                                                                        <small class="font-monospace">@cert.Thumbprint</small>
                                                                    </div>
                                                                    <div class="mb-2">
                                                                        <small class="text-muted">Valid:</small>
                                                                        <span class="badge @(cert.Status == "Valid" ? "bg-success" : "bg-danger") ms-1">@cert.Status</span>
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="col-6">
                                                                            <small class="text-muted">From:</small><br>
                                                                            <small>@cert.NotBefore.ToString("yyyy-MM-dd")</small>
                                                                        </div>
                                                                        <div class="col-6">
                                                                            <small class="text-muted">To:</small><br>
                                                                            <small>@cert.NotAfter.ToString("yyyy-MM-dd")</small>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
    }

    .hero-icon {
        animation: bounce 2s ease-in-out infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }

    .stat-card {
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .provider-card {
        transition: all 0.3s ease;
    }

    .provider-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .provider-icon {
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-item {
        transition: all 0.3s ease;
    }

    .info-item:hover {
        background-color: #f8f9fa !important;
    }

    .endpoint-card, .certificate-card, .org-card, .contact-card, .security-card, .nameid-card {
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .endpoint-card:hover, .certificate-card:hover, .org-card:hover, .contact-card:hover, .security-card:hover, .nameid-card:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
    }

    .badge {
        font-size: 0.75rem !important;
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
    }
</style>
