@using MvcDemo.Models

@model IssuerViewModel

@{
    ViewBag.Title = "Edit Identity Provider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="issuers-hero bg-gradient-warning text-dark py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="h2 fw-bold mb-2">
                    <i class="fas fa-edit me-2"></i>
                    Edit Identity Provider
                </h1>
                <p class="mb-0 opacity-75">
                    Modify the configuration for "@Model.Name". Changes take effect immediately.
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-icon">
                    <i class="fas fa-user-edit fa-4x text-dark opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-xl-8">
            <!-- Info Alert -->
            <div class="alert alert-warning border-0 shadow-sm">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning me-3"></i>
                    </div>
                    <div>
                        <h6 class="alert-heading mb-2">Immediate Changes</h6>
                        <p class="mb-0">Changes made here will be immediately applied to the metadata polling service. No application restart required.</p>
                    </div>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
                <div class="card-header bg-white border-bottom-0 py-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning rounded-circle p-3 me-3">
                            <i class="fas fa-sliders-h fa-lg text-white"></i>
                        </div>
                        <div>
                            <h4 class="mb-1">Provider Settings</h4>
                            <p class="text-muted mb-0">Modify the configuration for this identity provider</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "Issuers", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                        {
                            <div class="alert alert-danger border-0 rounded-3">
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Configuration Error
                                </h6>
                                @foreach (var error in ViewData.ModelState[""].Errors)
                                {
                                    <div class="mb-1">@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="Id" class="form-label fw-semibold">
                                    <i class="fas fa-id-badge me-2 text-primary"></i>
                                    Issuer ID <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-hashtag"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control form-control-lg", @readonly = "readonly" })
                                </div>
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="fas fa-lock me-1"></i>
                                        Issuer ID cannot be changed
                                    </small>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="Name" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-2 text-primary"></i>
                                    Display Name <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-building"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" + (ViewData.ModelState.ContainsKey("Name") && ViewData.ModelState["Name"].Errors.Count > 0 ? " is-invalid" : ""), required = "required" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "invalid-feedback" })
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        A friendly display name for this issuer
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <label for="Endpoint" class="form-label fw-semibold">
                                    <i class="fas fa-globe me-2 text-primary"></i>
                                    Metadata Endpoint <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-link"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Endpoint, new { @class = "form-control form-control-lg" + (ViewData.ModelState.ContainsKey("Endpoint") && ViewData.ModelState["Endpoint"].Errors.Count > 0 ? " is-invalid" : ""), @type = "url", required = "required" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Endpoint, "", new { @class = "invalid-feedback" })
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        The URL where the issuer publishes its SAML metadata
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Current Configuration Display -->
                        <div class="current-config mb-4">
                            <h6 class="mb-3">
                                <i class="fas fa-eye me-2 text-primary"></i>
                                Current Configuration
                            </h6>
                            <div class="alert alert-light border rounded-3">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-code text-secondary me-3 mt-1"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted mb-1 d-block">Current Web.config entry:</small>
                                        <code class="d-block bg-white p-3 rounded border font-monospace small">
                                            &lt;add id="@Model.Id"
                                                 endpoint="@Model.Endpoint"
                                                 name="@Model.Name" /&gt;
                                        </code>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-warning btn-lg px-4">
                                    <i class="fas fa-save me-2"></i>
                                    Save Changes
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>
                                    Reset
                                </button>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Index", "Issuers")" class="btn btn-outline-primary btn-lg px-4">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Back to Providers
                                </a>
                                <form method="post" action="@Url.Action("Delete", "Issuers")" style="display:inline;" onsubmit="return confirm('Are you sure you want to remove this provider from monitoring? This action cannot be undone.');">
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", Model.Id)
                                    <button type="submit" class="btn btn-outline-danger btn-lg px-4">
                                        <i class="fas fa-trash me-2"></i>
                                        Remove Provider
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Help Section -->
            <div class="row mt-4 g-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-history me-2"></i>
                                Change Impact
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">Modifying provider settings affects:</p>
                            <ul class="mb-0 small">
                                <li>Metadata polling frequency and endpoints</li>
                                <li>Token validation for this provider</li>
                                <li>Certificate validation and updates</li>
                                <li>Real-time monitoring and logging</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-danger text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Important Notes
                            </h6>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0 small text-danger">
                                <li>Issuer ID cannot be changed after creation</li>
                                <li>Invalid endpoints may break token validation</li>
                                <li>Changes are applied immediately</li>
                                <li>Monitor logs after making changes</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
    }

    .hero-icon {
        animation: shake 2s ease-in-out infinite;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        20%, 40%, 60%, 80% { transform: translateX(5px); }
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .form-control[readonly] {
        background-color: #f8f9fa !important;
        border-color: #dee2f !important;
        color: #6c757d !important;
    }

    .input-group-text {
        border-radius: 10px 0 0 10px;
        border: 2px solid #e9ecef;
        border-right: none;
    }

    .form-control-lg {
        border-radius: 0 10px 10px 0;
    }

    .current-config code {
        line-height: 1.4;
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
    }

    .btn {
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>

<script>
    // Store original values for reset functionality
    let originalValues = {};

    document.addEventListener('DOMContentLoaded', function() {
        // Store original values
        originalValues.name = document.getElementById('Name').value;
        originalValues.endpoint = document.getElementById('Endpoint').value;
    });

    function resetForm() {
        document.getElementById('Name').value = originalValues.name;
        document.getElementById('Endpoint').value = originalValues.endpoint;

        // Clear validation states
        const invalidFields = document.querySelectorAll('.is-invalid');
        invalidFields.forEach(field => field.classList.remove('is-invalid'));

        const feedbackElements = document.querySelectorAll('.invalid-feedback');
        feedbackElements.forEach(element => element.style.display = 'none');
    }
</script>
