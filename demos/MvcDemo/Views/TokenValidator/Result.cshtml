@using MvcDemo.Models

@model TokenValidationResultViewModel

@{
    ViewBag.Title = "Token Validation Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isMetadataPollingMessage = Model.Message != null && Model.Message.Contains("not available");
}

@{
    string headerClass = Model.IsValid ? "bg-success" : isMetadataPollingMessage ? "bg-info" : "bg-danger";
    string headerIcon = Model.IsValid ? "fa-check-circle" : isMetadataPollingMessage ? "fa-clock" : "fa-times-circle";
    string headerTitle = Model.IsValid ? "Token Validated Successfully" : isMetadataPollingMessage ? "Metadata Loading" : "Validation Failed";
}

<!-- Dark background wrapper for hero section -->
<div class="hero-wrapper" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); position: relative; overflow: hidden;">
    <!-- Animated background elements -->
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.05;">
        <div style="position: absolute; top: 20%; left: 10%; width: 300px; height: 300px; background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%); border-radius: 50%;"></div>
        <div style="position: absolute; bottom: 20%; right: 10%; width: 400px; height: 400px; background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%); border-radius: 50%;"></div>
    </div>
    
    <div class="result-hero text-white py-5" style="position: relative; z-index: 1;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="fas @headerIcon me-3"></i>
                        @headerTitle
                    </h1>
                    <p class="lead mb-4">
                        @if (Model.IsValid)
                        {
                            <text>The SAML token has passed all security validations and can be trusted for authentication.</text>
                        }
                        else if (isMetadataPollingMessage)
                        {
                            <text>The system is fetching metadata from the identity provider. Please wait or retry validation.</text>
                        }
                        else
                        {
                            <text>The token failed validation. Check the details below for specific issues.</text>
                        }
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="result-icon">
                        <i class="fas @headerIcon fa-6x text-white opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <!-- Main Result Card -->
            <div class="card shadow-lg border-0 rounded-3 overflow-hidden mb-4">
                <div class="card-header @headerClass text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fas @headerIcon fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="mb-1">@headerTitle</h4>
                            <p class="mb-0 opacity-75">@Model.Message</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Token Details -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-card p-3 bg-light rounded-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-id-badge text-primary me-2"></i>
                                    <h6 class="mb-0">Issuer ID</h6>
                                </div>
                                <p class="h5 mb-0 text-primary">@Model.IssuerId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-card p-3 bg-light rounded-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    <h6 class="mb-0">Issuer Name</h6>
                                </div>
                                <p class="h5 mb-0 text-primary">@(Model.IssuerName ?? "Not Available")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Status Details -->
                    <div class="status-section mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Validation Details
                        </h5>

                        @if (Model.IsValid)
                        {
                            <div class="alert alert-success border-0 rounded-3 p-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                                    </div>
                                    <div>
                                        <h6 class="alert-heading mb-2">All Validations Passed</h6>
                                        <p class="mb-0">The token's digital signature has been cryptographically verified using certificates from the issuer's metadata. The token is authentic and trustworthy.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Validation Checklist -->
                            <div class="validation-checklist">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="check-item p-3 bg-success bg-opacity-10 border border-success rounded-3 text-center">
                                            <i class="fas fa-signature fa-2x text-success mb-2"></i>
                                            <h6 class="mb-1">Signature Valid</h6>
                                            <small class="text-muted">Cryptographically verified</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="check-item p-3 bg-success bg-opacity-10 border border-success rounded-3 text-center">
                                            <i class="fas fa-user-check fa-2x text-success mb-2"></i>
                                            <h6 class="mb-1">Issuer Verified</h6>
                                            <small class="text-muted">Matches expected provider</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="check-item p-3 bg-success bg-opacity-10 border border-success rounded-3 text-center">
                                            <i class="fas fa-clock fa-2x text-success mb-2"></i>
                                            <h6 class="mb-1">Not Expired</h6>
                                            <small class="text-muted">Within validity period</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (isMetadataPollingMessage)
                        {
                            <div class="alert alert-info border-0 rounded-3 p-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-clock fa-2x text-info me-3"></i>
                                    </div>
                                    <div>
                                        <h6 class="alert-heading mb-2">Metadata Fetch in Progress</h6>
                                        <p class="mb-0">@Model.ErrorDetails</p>
                                        <div class="mt-3">
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 75%"></div>
                                            </div>
                                            <small class="text-muted mt-1 d-block">Fetching metadata from identity provider...</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger border-0 rounded-3 p-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-exclamation-triangle fa-2x text-danger me-3"></i>
                                    </div>
                                    <div>
                                        <h6 class="alert-heading mb-2">Validation Failed</h6>
                                        <p class="mb-0">@Model.ErrorDetails</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (Model.IsValid)
                    {
                        <!-- Token Properties Section -->
                        <div class="token-properties-section mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-list-alt text-primary me-2"></i>
                                Token Properties
                            </h5>

                            <!-- Token Timestamps -->
                            @if (Model.IssueInstant.HasValue || Model.NotBefore.HasValue || Model.NotOnOrAfter.HasValue)
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-clock text-primary me-2"></i>
                                            Token Validity
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-3">
                                            @if (Model.IssueInstant.HasValue)
                                            {
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-calendar-plus text-info me-2 mt-1"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Issued At</small>
                                                            <strong>@Model.IssueInstant.Value.ToString("yyyy-MM-dd HH:mm:ss UTC")</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.NotBefore.HasValue)
                                            {
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-calendar-check text-success me-2 mt-1"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Valid From</small>
                                                            <strong>@Model.NotBefore.Value.ToString("yyyy-MM-dd HH:mm:ss UTC")</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.NotOnOrAfter.HasValue)
                                            {
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-calendar-times text-danger me-2 mt-1"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Valid Until</small>
                                                            <strong>@Model.NotOnOrAfter.Value.ToString("yyyy-MM-dd HH:mm:ss UTC")</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Token Issuer -->
                            @if (!string.IsNullOrEmpty(Model.TokenIssuer))
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-certificate text-primary me-2"></i>
                                            Token Issuer
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-shield-alt text-success fa-2x me-3"></i>
                                            <div>
                                                <code class="text-dark">@Model.TokenIssuer</code>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Audiences -->
                            @if (Model.Audiences != null && Model.Audiences.Any())
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-users text-primary me-2"></i>
                                            Audiences (@Model.Audiences.Count)
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="list-group list-group-flush">
                                            @foreach (var audience in Model.Audiences)
                                            {
                                                <div class="list-group-item border-0 px-0">
                                                    <i class="fas fa-check-circle text-success me-2"></i>
                                                    <code class="text-dark">@audience</code>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Claims -->
                            @if (Model.Claims != null && Model.Claims.Any())
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-key text-primary me-2"></i>
                                            Claims (@Model.Claims.Count)
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-sm mb-0">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 30%;">Claim Type</th>
                                                        <th>Claim Value</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var claim in System.Linq.Enumerable.OrderBy(Model.Claims, c => c.Key))
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span class="badge bg-primary">@claim.Key</span>
                                                            </td>
                                                            <td>
                                                                <code class="text-dark">@claim.Value</code>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Certificate Information -->
                            @if (Model.SigningCertificateCount.HasValue && Model.SigningCertificateCount.Value > 0)
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-file-certificate text-primary me-2"></i>
                                            Signing Certificate Information
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-start">
                                                    <i class="fas fa-hashtag text-info me-2 mt-1"></i>
                                                    <div>
                                                        <small class="text-muted d-block">Certificate Count</small>
                                                        <strong>@Model.SigningCertificateCount</strong>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(Model.PrimarySigningCertificateThumbprint))
                                            {
                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-fingerprint text-warning me-2 mt-1"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Primary Certificate Thumbprint</small>
                                                            <code class="text-dark small">@Model.PrimarySigningCertificateThumbprint</code>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.PrimarySigningCertificateExpiration.HasValue)
                                            {
                                                <div class="col-md-12">
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-calendar-times text-danger me-2 mt-1"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Certificate Expires</small>
                                                            <strong>@Model.PrimarySigningCertificateExpiration.Value.ToString("yyyy-MM-dd HH:mm:ss")</strong>
                                                            @{
                                                                var daysUntilExpiry = (Model.PrimarySigningCertificateExpiration.Value - DateTime.Now).Days;
                                                                if (daysUntilExpiry < 30)
                                                                {
                                                                    <span class="badge bg-warning text-dark ms-2">Expires in @daysUntilExpiry days</span>
                                                                }
                                                                else if (daysUntilExpiry < 0)
                                                                {
                                                                    <span class="badge bg-danger ms-2">EXPIRED</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-success ms-2">Valid</span>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="action-buttons d-flex justify-content-between align-items-center">
                        <div class="d-flex gap-2">
                            @if (isMetadataPollingMessage)
                            {
                                <button type="button" class="btn btn-primary btn-lg px-4" onclick="waitAndRetry()">
                                    <i class="fas fa-redo me-2"></i>
                                    Retry Validation
                                </button>
                            }
                            else
                            {
                                <form method="post" action="@Url.Action("Back", "TokenValidator")" class="d-inline">
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="fas fa-plus-circle me-2"></i>
                                        Validate Another Token
                                    </button>
                                </form>
                            }
                        </div>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "TokenValidator")" class="btn btn-outline-primary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to Validator
                            </a>
                            <a href="@Url.Action("Index", "Issuers")" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-cog me-2"></i>
                                Manage Issuers
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Information Cards -->
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-shield-alt text-primary me-2"></i>
                                Security Validations Performed
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="validation-list">
                                <div class="validation-item d-flex align-items-center mb-3">
                                    <i class="fas fa-check-circle text-success me-3"></i>
                                    <div>
                                        <strong>Digital Signature</strong><br>
                                        <small class="text-muted">Cryptographic verification using issuer certificates</small>
                                    </div>
                                </div>
                                <div class="validation-item d-flex align-items-center mb-3">
                                    <i class="fas fa-check-circle text-success me-3"></i>
                                    <div>
                                        <strong>Issuer Authentication</strong><br>
                                        <small class="text-muted">Confirms token origin from trusted provider</small>
                                    </div>
                                </div>
                                <div class="validation-item d-flex align-items-center mb-3">
                                    <i class="fas fa-check-circle text-success me-3"></i>
                                    <div>
                                        <strong>Expiration Check</strong><br>
                                        <small class="text-muted">Validates token is within validity period</small>
                                    </div>
                                </div>
                                <div class="validation-item d-flex align-items-center mb-3">
                                    <i class="fas fa-check-circle text-success me-3"></i>
                                    <div>
                                        <strong>Metadata Verification</strong><br>
                                        <small class="text-muted">Ensures issuer metadata is available and valid</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    @if (Model.IsValid)
                    {
                        <div class="card border-0 shadow-sm h-100 border-success">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Token is Ready for Use
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">This SAML token has passed all security validations and can be safely used for:</p>
                                <ul class="mb-0">
                                    <li>Single Sign-On (SSO) authentication</li>
                                    <li>API access with token-based security</li>
                                    <li>Integration testing and development</li>
                                    <li>Enterprise application access</li>
                                </ul>
                                <div class="mt-3 p-3 bg-success bg-opacity-10 rounded">
                                    <i class="fas fa-lock text-success me-2"></i>
                                    <strong>Security Assured:</strong> Token integrity and authenticity verified
                                </div>
                            </div>
                        </div>
                    }
                    else if (!isMetadataPollingMessage)
                    {
                        <div class="card border-0 shadow-sm h-100 border-danger">
                            <div class="card-header bg-danger text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Troubleshooting Guide
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">Common issues and solutions:</p>
                                <div class="troubleshooting-item mb-3 p-3 bg-danger bg-opacity-10 rounded">
                                    <strong>Wrong Issuer Selected</strong><br>
                                    <small>Ensure you chose the correct identity provider that issued the token</small>
                                </div>
                                <div class="troubleshooting-item mb-3 p-3 bg-danger bg-opacity-10 rounded">
                                    <strong>Token Format Issues</strong><br>
                                    <small>Verify the token is properly formatted (XML, Base64, or HTML-escaped)</small>
                                </div>
                                <div class="troubleshooting-item mb-3 p-3 bg-danger bg-opacity-10 rounded">
                                    <strong>Metadata Not Available</strong><br>
                                    <small>Check that the issuer's metadata endpoint is accessible</small>
                                </div>
                                <div class="troubleshooting-item p-3 bg-danger bg-opacity-10 rounded">
                                    <strong>Token Expired</strong><br>
                                    <small>Request a fresh token from the identity provider</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card border-0 shadow-sm h-100 border-info">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Metadata Synchronization
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">The system is currently fetching fresh metadata from the identity provider:</p>
                                <div class="sync-steps">
                                    <div class="step d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small>Contacting issuer endpoint</small>
                                    </div>
                                    <div class="step d-flex align-items-center mb-2">
                                        <i class="fas fa-spinner fa-spin text-info me-2"></i>
                                        <small>Downloading metadata document</small>
                                    </div>
                                    <div class="step d-flex align-items-center mb-2">
                                        <i class="fas fa-clock text-muted me-2"></i>
                                        <small>Parsing certificates and configuration</small>
                                    </div>
                                    <div class="step d-flex align-items-center mb-2">
                                        <i class="fas fa-clock text-muted me-2"></i>
                                        <small>Caching for future validations</small>
                                    </div>
                                </div>
                                <div class="mt-3 p-3 bg-info bg-opacity-10 rounded">
                                    <i class="fas fa-clock text-info me-2"></i>
                                    <strong>Estimated time:</strong> 5-15 seconds depending on network conditions
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function waitAndRetry() {
        var button = event.target;
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Retrying in 5...';

        var countdown = 5;
        var interval = setInterval(function() {
            countdown--;
            if (countdown > 0) {
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Retrying in ' + countdown + '...';
            } else {
                clearInterval(interval);
                // Redirect back to token validator with the same issuer
                window.location.href = "@Url.Action("Index", "TokenValidator")";
            }
        }, 1000);
    }
</script>

<style>
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @@keyframes bounceIn {
        0% { transform: scale(0.3); opacity: 0; }
        50% { transform: scale(1.05); }
        70% { transform: scale(0.9); }
        100% { transform: scale(1); opacity: 1; }
    }
</style>
